<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:semantic="sap.f.semantic"
	controllerName="com.sap.innovision.controller.Master" xmlns:html="http://www.w3.org/1999/xhtml">
	<!--<App>-->
	<!--	<pages>-->
	<!--		<Page title="Test Automation Framework" class="masterp" >-->
	<!--			<content>-->
	<semantic:SemanticPage id="master_id" preserveHeaderStateOnScroll="true" toggleHeaderOnTitleClick="false">
		<semantic:titleHeading>
			<Title id="masterPageTitle" text="Test automation framework" level="H2"/>
		</semantic:titleHeading>
		<semantic:content>
			<List id="list" width="auto" class="sapFDynamicPageAlignContent" items="{path:'/suite', sorter:{path:'status/_attributes/starttime', descending:'true' } }" noDataText="No data available"
				mode="{= ${device>/system/phone} ? 'None' : 'SingleSelectMaster'}" growing="true" growingScrollToLoad="true"
				updateFinished=".onUpdateFinished" selectionChange=".onSelectionChange">
				<infoToolbar>
					<Toolbar active="true" id="filterBar" visible="{masterView>/isFilterBarVisible}" press=".onOpenViewSettings">
						<Title id="filterBarLabel" text="{masterView>/filterBarLabel}" level="H3"/>
					</Toolbar>
				</infoToolbar>
				<headerToolbar>
					<OverflowToolbar>
						<SearchField id="searchField" showRefreshButton="true" tooltip="{i18n>masterSearchTooltip}" search=".onSearch" width="auto">
							<layoutData>
								<OverflowToolbarLayoutData minWidth="150px" maxWidth="240px" shrinkable="true" priority="NeverOverflow"/>
							</layoutData>
						</SearchField>
						<ToolbarSpacer/>
						<Button id="sortButton" press=".onSort" icon="sap-icon://sort" type="Transparent"/>
						<Button id="filterButton" press=".handleFilterButtonPressed" icon="sap-icon://filter" type="Transparent"/>
					</OverflowToolbar>
				</headerToolbar>
			
				<items	>
				
				
					<!--<ObjectListItem type="Navigation" press=".onSelectionChange" title="{_attributes/name}">-->
					<ObjectListItem type="Navigation" press=".onSelectionChange" title="{path: '_attributes/source', formatter: '.formatter.name'}">
						
						<firstStatus>
							<ObjectStatus text="{path: 'status/_attributes/status'}" icon="sap-icon://circle-task-2"
								state="{ path: 'status/_attributes/status', formatter: '.formatter.status1' }"/>
						</firstStatus>
						<attributes>
						<!--<ObjectAttribute  text="status: {  path: 'status/_attributes/status' }"/>-->
								<ObjectAttribute text="Last run: { parts:[ {path:'status/_attributes/starttime'}], formatter: '.formatter.status' }"/>
							    <ObjectAttribute text="system: { parts:[ {path:'_attributes/name'}], formatter: '.formatter.system' }"/>
						</attributes>
					</ObjectListItem>
				</items>
			</List>
		</semantic:content>
	</semantic:SemanticPage>

</mvc:View>